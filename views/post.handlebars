<section
  class="mt-10 flex mx-auto relative max-w-lg max-h-96 rounded-md bg-gray-200 p-4"
  style="width: fit-content;"
>
  <div
    class="flex flex-col items-center justify-center w-full h-full text-blue p-8 rounded-md bg-white"
  >
    <!-- Input event title here -->
    <h2 id="title" class="text-3xl text-black mb-4">Post Title</h2>

    <!-- Event Description here -->
    <div id="description" class="bg-gray-100 p-4 rounded-md mb-4">
      <!-- Your content goes here -->
    </div>

    <div id="deletePost">
      <!-- Delete post content goes here -->
    </div>

    <div id="commentForm" class="mb-4">
      <textarea
        name="content"
        id="commentContent"
        class="w-full p-2 border rounded-md"
        rows="5"
      ></textarea>
      <button
        id="submitForm"
        class="bg-blue-500 text-white px-4 py-2 rounded-md"
      >Comment</button>
    </div>

    <!-- Comment list here -->
    <div id="commentSection">
      <!-- Comment list content goes here -->
    </div>
  </div>
</section>